extends index.pug

block matchList
  h4 Portfolio
  if Object.keys(portfolio).length === 0 && portfolio.constructor === Object
    p Nothing in your portfolio yet!
  each val, key in portfolio
    - var date = new Date(Number(key))
    h5= date.getDate() + '-' + (date.getMonth() + 1) + '-' + date.getFullYear()
    each item in val
      div.match-tease
        div.match-tease--team
          img(src=item.team1.logo)
          div.match-tease--team--info
            h5= item.team1.name
            span= item.bettingData.ezBetOdds.toFixed(2)
        div.match-tease--date
          - var matchDate = new Date(item.date).toLocaleTimeString()
          span= matchDate.replace(/:\d+ /, ' ')
        div.match-tease--team
          div.match-tease--team--info
            h5= item.team2.name
            span= (1 - item.bettingData.ezBetOdds).toFixed(2)
          img(src=item.team2.logo)