html
  head
    block head
      link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,400;1,700&display=swap')
      script(src='/js/client.js')
      title= title
  body
    
    section#header
      div.container-fluid
        div.wrapper
        
          block header
            div#tabs
              ul
                li.current
                  a(href='/') Home
                li
                  a(href='/history') History
                  
            a.ezbet-btn(href='/portfolio') Portfolio
        
    section#content
      div.container-fluid
        div.wrapper
          
          block content
            div.row.h-100.home-columns
              div.col-lg-4
                div#matches
                  block matchList
                    h4 Today
                    if Object.keys(matchesBettingDataHistoryToday).length === 0 && matchesBettingDataHistoryToday.constructor === Object
                      p No more matches today
                    each val in matchesBettingDataHistoryToday               
                      div.match-tease
                        div.match-tease--team
                          img(src=val.team1.logo)
                          div.match-tease--team--info
                            h5= val.team1.name
                            span= val.bettingData.ezBetOdds.toFixed(2)
                        div.match-tease--date
                          - var matchDate = new Date(val.date).toLocaleTimeString()
                          span= matchDate.replace(/:\d+ /, ' ')
                        div.match-tease--team
                          div.match-tease--team--info
                            h5= val.team2.name
                            span= (1 - val.bettingData.ezBetOdds).toFixed(2)
                          img(src=val.team2.logo)

              
              div.col-lg-8
                div#match-detail-wrapper
